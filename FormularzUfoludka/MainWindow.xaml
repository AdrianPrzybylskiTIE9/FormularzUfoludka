<Window x:Class="FormularzUfoludka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formularz Ufoludka" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
            <TextBlock HorizontalAlignment="Center" FontSize="20"  FontWeight="bold">Formularz Ufoludka</TextBlock>
        </StackPanel>
        

        <StackPanel Grid.Row="1" Width="250">
            <Label>Login:</Label>
            <TextBox x:Name="nameInput" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Width="250">
            <Label>Hasło:</Label>
            <PasswordBox x:Name="passwordInput" Width="200"></PasswordBox>
        </StackPanel>
        
        <Button Content="Dalej" Width="300" Height="30" HorizontalAlignment="Center" Grid.Row="3"/>

    </Grid>
</Window>
