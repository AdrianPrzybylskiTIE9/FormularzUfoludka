<Window x:Class="FormularzUfoludka.DataTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormularzUfoludka"
        mc:Ignorable="d"
        Title="DataTable" Height="450" Width="800">
    <Grid>
        <ListView x:Name="dataListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Imie" DisplayMemberBinding="{Binding Name}" Width="100"/>
                    <GridViewColumn Header="Płeć" DisplayMemberBinding="{Binding Gender}" Width="100"/>
                    <GridViewColumn Header="Data urodzenia" DisplayMemberBinding="{Binding BirthDate}" Width="100"/>
                    <GridViewColumn Header="Wiek" DisplayMemberBinding="{Binding Age}" Width="50"/>
                    <GridViewColumn Header="Planeta" DisplayMemberBinding="{Binding Planet}" Width="100"/>
                    <GridViewColumn Header="Gatunek" DisplayMemberBinding="{Binding Species}" Width="100"/>
                    <GridViewColumn Header="Ulubione Jedzenie" DisplayMemberBinding="{Binding FavoriteFoods}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
